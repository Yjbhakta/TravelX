@page "/register"
@inject NavigationManager Navigation
@using System.Timers
@using TravelX.Web.Services
@inject HotelRegistrationService RegistrationService

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    
    <!-- Hero Section with Counter -->
    <section class="py-16 md:py-24">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
                Join <span class="text-blue-600">@hotelCount.ToString("N0")</span> Hotel Owners
            </h1>
            <p class="text-xl md:text-2xl text-gray-700 max-w-4xl mx-auto mb-8">
                Be part of the world's first hotelier-owned travel platform. 
                Take control of your distribution and unlock new revenue streams.
            </p>
            
            <!-- Live Counter Display -->
            <div class="bg-white rounded-lg shadow-lg p-6 max-w-md mx-auto mb-8">
                <div class="text-center">
                    <div class="text-4xl font-bold text-blue-600 mb-2">
                        @hotelCount.ToString("N0")
                    </div>
                    <div class="text-lg text-gray-600">
                        Hotels Already Registered
                    </div>
                    <div class="text-sm text-gray-500 mt-2">
                        <i class="fas fa-users mr-1"></i>
                        Growing every day
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Registration Form -->
    <section class="py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div class="grid lg:grid-cols-2 gap-8">
                    
                    <!-- Registration Form -->
                    <div class="bg-white rounded-lg shadow-xl p-8">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">
                            Register Your Hotel
                        </h2>
                        
                        <form @onsubmit="HandleRegistration">
                            <!-- Hotel Information -->
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Hotel Name *
                                    </label>
                                    <input type="text" 
                                           class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                           @bind="hotelName"
                                           required />
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Number of Rooms *
                                    </label>
                                    <select class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                            @bind="roomCount"
                                            required>
                                        <option value="">Select range</option>
                                        <option value="1-10">1-10 rooms</option>
                                        <option value="11-50">11-50 rooms</option>
                                        <option value="51-100">51-100 rooms</option>
                                        <option value="101-250">101-250 rooms</option>
                                        <option value="251-500">251-500 rooms</option>
                                        <option value="500+">500+ rooms</option>
                                    </select>
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Hotel Category *
                                    </label>
                                    <select class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                            @bind="hotelCategory"
                                            required>
                                        <option value="">Select category</option>
                                        <option value="budget">Budget</option>
                                        <option value="mid-range">Mid-range</option>
                                        <option value="luxury">Luxury</option>
                                        <option value="boutique">Boutique</option>
                                        <option value="resort">Resort</option>
                                    </select>
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        City/Location *
                                    </label>
                                    <input type="text" 
                                           class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                           @bind="location"
                                           required />
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Country *
                                    </label>
                                    <select class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                            @bind="country"
                                            required>
                                        <option value="">Select country</option>
                                        <option value="US">United States</option>
                                        <option value="CA">Canada</option>
                                        <option value="UK">United Kingdom</option>
                                        <option value="DE">Germany</option>
                                        <option value="FR">France</option>
                                        <option value="IT">Italy</option>
                                        <option value="ES">Spain</option>
                                        <option value="AU">Australia</option>
                                        <option value="JP">Japan</option>
                                        <option value="SG">Singapore</option>
                                        <option value="AE">UAE</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                            </div>
                            
                            <hr class="my-6" />
                            
                            <!-- Contact Information -->
                            <div class="space-y-4">
                                <h3 class="text-lg font-semibold text-gray-900">Primary Contact</h3>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Full Name *
                                    </label>
                                    <input type="text" 
                                           class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                           @bind="fullName"
                                           required />
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Email Address *
                                    </label>
                                    <input type="email" 
                                           class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                           @bind="email"
                                           required />
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Phone Number *
                                    </label>
                                    <input type="tel" 
                                           class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                           @bind="phone"
                                           required />
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Position/Title *
                                    </label>
                                    <input type="text" 
                                           class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                           @bind="position"
                                           required />
                                </div>
                            </div>
                            
                            <hr class="my-6" />
                            
                            <!-- Agreement -->
                            <div class="space-y-4">
                                <label class="flex items-start">
                                    <input type="checkbox" 
                                           class="mt-1 mr-3"
                                           @bind="agreesToTerms"
                                           required />
                                    <span class="text-sm text-gray-600">
                                        I agree to the <a href="/terms" class="text-blue-600 hover:underline">Terms of Service</a> 
                                        and <a href="/privacy" class="text-blue-600 hover:underline">Privacy Policy</a>
                                    </span>
                                </label>
                                
                                <label class="flex items-start">
                                    <input type="checkbox" 
                                           class="mt-1 mr-3"
                                           @bind="agreesToOwnership"
                                           required />
                                    <span class="text-sm text-gray-600">
                                        I understand that joining Travel-X includes 70% ownership equity 
                                        and revenue sharing across all platform bookings
                                    </span>
                                </label>
                            </div>
                            
                            <button type="submit" 
                                    class="w-full bg-blue-600 text-white py-3 px-4 rounded-md hover:bg-blue-700 transition duration-200 font-semibold mt-6"
                                    disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span>Registering...</span>
                                }
                                else
                                {
                                    <span>Join @hotelCount.ToString("N0") Hotel Owners Today</span>
                                }
                            </button>
                        </form>
                        
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-md">
                                <p class="text-sm text-red-600">@errorMessage</p>
                            </div>
                        }
                        
                        @if (registrationSuccess)
                        {
                            <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-md">
                                <p class="text-sm text-green-600">
                                    Registration successful! Welcome to Travel-X. 
                                    You are now owner #@(hotelCount + 1) in our growing community.
                                </p>
                            </div>
                        }
                    </div>
                    
                    <!-- Benefits Preview -->
                    <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg p-8">
                        <h3 class="text-xl font-bold text-gray-900 mb-4">
                            What You'll Get
                        </h3>
                        
                        <div class="space-y-4">
                            <div class="flex items-start">
                                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm mr-3 mt-1">
                                    1
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">70% Platform Ownership</div>
                                    <div class="text-sm text-gray-600">Share in profits from all bookings</div>
                                </div>
                            </div>
                            
                            <div class="flex items-start">
                                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm mr-3 mt-1">
                                    2
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Premium Distribution</div>
                                    <div class="text-sm text-gray-600">Higher visibility based on contribution</div>
                                </div>
                            </div>
                            
                            <div class="flex items-start">
                                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm mr-3 mt-1">
                                    3
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Multi-Vertical Revenue</div>
                                    <div class="text-sm text-gray-600">Earn from flights, cars, and more</div>
                                </div>
                            </div>
                            
                            <div class="flex items-start">
                                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm mr-3 mt-1">
                                    4
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Governance Rights</div>
                                    <div class="text-sm text-gray-600">Vote on platform decisions</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-6 p-4 bg-white rounded-lg">
                            <div class="text-center">
                                <div class="text-2xl font-bold text-blue-600">
                                    @hotelCount.ToString("N0")
                                </div>
                                <div class="text-sm text-gray-600">
                                    Hotels Already Growing Together
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Progress Bar -->
    <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-600">
                    Hotel Owners Registered Today: <span class="font-bold text-blue-600">@dailyRegistrations</span>
                </div>
                <div class="text-sm text-gray-600">
                    Total Community: <span class="font-bold text-blue-600">@hotelCount.ToString("N0")</span>
                </div>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
                <div class="bg-blue-600 h-2 rounded-full transition-all duration-1000" 
                     style="width: @((hotelCount % 100) * 1)%"></div>
            </div>
        </div>
    </div>
</div>

@code {
    private int hotelCount = 0;
    private int dailyRegistrations = 0;
    private Timer? counterTimer;
    private Timer? dailyTimer;
    
    // Form fields
    private string hotelName = "";
    private string roomCount = "";
    private string hotelCategory = "";
    private string location = "";
    private string country = "";
    private string fullName = "";
    private string email = "";
    private string phone = "";
    private string position = "";
    private bool agreesToTerms = false;
    private bool agreesToOwnership = false;
    private bool isLoading = false;
    private bool registrationSuccess = false;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        // Get real counts from database
        hotelCount = await RegistrationService.GetTotalHotelCountAsync();
        dailyRegistrations = await RegistrationService.GetTodayRegistrationsAsync();
        
        // Start counters for demo purposes
        counterTimer = new Timer(15000); // Update every 15 seconds
        counterTimer.Elapsed += OnCounterUpdate;
        counterTimer.Start();
        
        dailyTimer = new Timer(60000); // Update daily count every 60 seconds
        dailyTimer.Elapsed += OnDailyUpdate;
        dailyTimer.Start();
        
        await Task.CompletedTask;
    }

    private void OnCounterUpdate(object? sender, ElapsedEventArgs e)
    {
        InvokeAsync(() => 
        {
            // Simulate new registrations
            if (new Random().Next(100) < 35) // 35% chance of new registration
            {
                hotelCount++;
                StateHasChanged();
            }
        });
    }

    private void OnDailyUpdate(object? sender, ElapsedEventArgs e)
    {
        InvokeAsync(() => 
        {
            // Simulate daily registrations
            var newDaily = new Random().Next(5, 25);
            dailyRegistrations = newDaily;
            StateHasChanged();
        });
    }

    private async Task HandleRegistration()
    {
        if (!agreesToTerms || !agreesToOwnership)
        {
            errorMessage = "Please agree to all terms and conditions";
            return;
        }

        isLoading = true;
        errorMessage = "";
        
        try
        {
            var registration = new TravelX.Web.Services.HotelRegistrationDto
            {
                HotelName = hotelName,
                RoomCount = roomCount,
                HotelCategory = hotelCategory,
                Location = location,
                Country = country,
                FullName = fullName,
                Email = email,
                Phone = phone,
                Position = position,
                Description = $"Hotel registered by {fullName}"
            };

            var result = await RegistrationService.RegisterHotelAsync(registration);
            
            if (result.Success)
            {
                // Update counters from database
                hotelCount = await RegistrationService.GetTotalHotelCountAsync();
                dailyRegistrations = await RegistrationService.GetTodayRegistrationsAsync();
                
                registrationSuccess = true;
                
                // Reset form
                ResetForm();
                
                // Navigate after delay
                await Task.Delay(3000);
                Navigation.NavigateTo("/hotel-owners");
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Registration failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Registration failed: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ResetForm()
    {
        hotelName = "";
        roomCount = "";
        hotelCategory = "";
        location = "";
        country = "";
        fullName = "";
        email = "";
        phone = "";
        position = "";
        agreesToTerms = false;
        agreesToOwnership = false;
    }

    public void Dispose()
    {
        counterTimer?.Dispose();
        dailyTimer?.Dispose();
    }
}